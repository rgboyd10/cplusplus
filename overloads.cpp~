#include <iostream>
using namespace std;

double add(double x, double y)
{
  return x + y;
}

double add(double a, double b, double c)
{
  return a + b + c;
  //or return add(add(a,b),c);
}

int main()
{
  double a = add(3, 4);
  cout << "3 + 4 is " << a;
  double b = add(1.2, 3.4);
  cout << endl;
}
